<div class="container">
    <h1 class="col-lg-6 col-md-10 col-sm-10"><%= title %> Movie</h1>
    <hr>
    <div id="messageArea"></div>

    <div class="row justify-content-lg-center g-3">
        <form method="POST" class="col-lg-6 col-md-10 col-sm-10">

            <div class="input-group mb-3">
                <span class="input-group-text">Movie Name</span>
                <input id="movieName" name="movieName" type="text" class="form-control" value="<%= movie.Name %>" aria-label="Movie Name" aria-describedby="Movie Name Input" required>
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text">Director Name</span>
                <input id="movieDirector" name="movieDirector" type="text" class="form-control" value="<%= movie.Director %>" aria-label="Director Name" aria-describedby="Movie Director Input" required>
            </div>

        </form> 
    
    </div>